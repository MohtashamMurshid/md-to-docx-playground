---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
---

<Layout>
	<main class="min-h-screen flex items-center">
		<section class="mx-auto max-w-3xl w-full px-4 py-24 text-center">
			<h1 class="text-4xl md:text-5xl font-semibold tracking-tight">
				Markdown â†’ DOCX, instantly
			</h1>
			<p class="mt-4 text-base text-neutral-500 md:text-lg">
				Convert Markdown to a polished .docx right in your browser â€” no
				servers, no signâ€‘ups.
			</p>
			<div class="mt-8 flex items-center justify-center gap-3 flex-wrap">
				<Button
					className="inline-flex items-center gap-2 bg-neutral-900 text-white px-4 py-2 text-sm hover:bg-neutral-800 dark:bg-white dark:text-neutral-900 dark:hover:opacity-90"
					variant="default"
				>
					<a href="/playground">Open Playground</a>
				</Button>
				<Button
					id="convert-copied-btn"
					className="inline-flex items-center gap-2 text-sm"
					variant="outline"
				>
					ðŸ“‹ Convert Copied
				</Button>
				<Button
					className="text-sm underline hover:opacity-80"
					variant="outline"
				>
					<a
						href="https://github.com/mohtashammurshid/md-to-docx"
						rel="noreferrer"
						target="_blank"
					>
						View repo â†’
					</a>
				</Button>
			</div>
			<p class="mt-6 text-xs text-neutral-400">
				100% local conversion. Supports headings, lists, tables, code,
				images & TOC.
			</p>
		</section>
	</main>

	<script>
		import {
			convertMarkdownToDocx,
			downloadDocx,
		} from "@mohtasham/md-to-docx";

		document.addEventListener("DOMContentLoaded", () => {
			const btn = document.getElementById("convert-copied-btn");

			btn?.addEventListener("click", async () => {
				try {
					const text = await navigator.clipboard.readText();

					if (!text) {
						alert("Clipboard is empty or contains no text");
						return;
					}

					// Show loading state
					const originalText = btn.innerHTML;
					btn.innerHTML = "â³ Converting...";
					btn.setAttribute("disabled", "true");

					// Convert and download
					const blob = await convertMarkdownToDocx(text);
					downloadDocx(blob, "clipboard-markdown.docx");

					// Reset button
					btn.innerHTML = "âœ… Converted!";
					setTimeout(() => {
						btn.innerHTML = originalText;
						btn.removeAttribute("disabled");
					}, 2000);
				} catch (error) {
					console.error("Conversion error:", error);

					// Check if it's a permission error
					if (
						error instanceof DOMException &&
						error.name === "NotAllowedError"
					) {
						alert(
							"Clipboard access denied. Please grant permission or try copying text again.",
						);
					} else {
						alert(
							"Failed to convert clipboard content. Make sure you have markdown text copied.",
						);
					}

					// Reset button
					btn.innerHTML = "ðŸ“‹ Convert Copied";
					btn.removeAttribute("disabled");
				}
			});
		});
	</script>
</Layout>
