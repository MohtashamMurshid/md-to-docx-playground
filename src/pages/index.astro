---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
---

<Layout>
	<main class="min-h-screen flex items-center">
		<section class="mx-auto max-w-3xl w-full px-4 py-24 text-center">
			<h1 class="text-4xl md:text-5xl font-semibold tracking-tight">
				Markdown → DOCX, instantly
			</h1>
			<p class="mt-4 text-base text-neutral-500 md:text-lg">
				Convert Markdown to a polished .docx right in your browser — no
				servers, no sign‑ups.
			</p>
			<div class="mt-8 flex items-center justify-center gap-3">
            <Button
                className="inline-flex items-center gap-2 bg-neutral-900 text-white px-4 py-2 text-sm hover:bg-neutral-800 dark:bg-white dark:text-neutral-900 dark:hover:opacity-90"
                variant="default"
            >
					<a href="/playground">Open Playground</a>
				</Button>
				<Button
					className="text-sm underline hover:opacity-80"
					variant="outline"
				>
					<a
						href="https://github.com/mohtashammurshidmadani/md-to-docx"
						rel="noreferrer"
						target="_blank"
					>
						View repo →
					</a>
				</Button>
                
			</div>
			<p class="mt-6 text-xs text-neutral-400">
				100% local conversion. Supports headings, lists, tables, code,
				images & TOC.
			</p>
		</section>
	</main>
</Layout>
